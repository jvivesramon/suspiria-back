{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["xo", "prettier"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": "*.ts",
      "rules": {
        "no-unused-vars": "error",
        "@typescript-eslint/consistent-type-definitions": [
          "error",
          "interface"
        ],
        "new-cap": [
          "error",
          {
            "capIsNewExceptions": ["Router"]
          }
        ]
      }
    },
    {
      "files": "index.ts",
      "rules": {
        "@typescript-eslint/no-unsafe-call": "off"
      }
    },
    {
      "files": ["src/**/schema/*.ts"],
      "rules": {
        "@typescript-eslint/naming-convention": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}
